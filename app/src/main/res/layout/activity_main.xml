<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".activity.main.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <!--전체 화면-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--배경-->
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_background1" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:rowCount="4">


                <!--1. 타이틀-->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/constraint1"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginTop="18dp"
                        android:paddingStart="15dp"
                        android:paddingLeft="15dp"
                        android:paddingEnd="15dp"
                        android:paddingRight="15dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/app_name"
                            android:layout_width="161dp"
                            android:layout_height="26dp"
                            android:fontFamily="@font/noto_sans"
                            android:text="깐깐한 의사 "
                            android:textColor="#fff"
                            android:textSize="20sp"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints"
                            tools:layout_editor_absoluteX="0dp" />

                        <ImageView
                            android:id="@+id/main_state"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="124dp"
                            android:layout_marginLeft="124dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/main_light"
                            app:layout_constraintEnd_toStartOf="@+id/imageView"
                            app:layout_constraintStart_toEndOf="@+id/app_name"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!--<ImageView-->
                        <!--android:id="@+id/imageView"-->
                        <!--android:layout_width="25dp"-->
                        <!--android:layout_height="25dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:background="@drawable/main_menu"-->
                        <!--app:layout_constraintEnd_toEndOf="parent"-->
                        <!--app:layout_constraintHorizontal_bias="1.0"-->
                        <!--app:layout_constraintStart_toEndOf="@+id/main_state"-->
                        <!--app:layout_constraintTop_toTopOf="parent" />-->

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/noto_sans"
                            android:text="정다운님, 오늘의 상태를 기록해보세요"
                            android:textColor="#fff"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/app_name"
                            app:layout_constraintVertical_bias="1.0"
                            tools:ignore="MissingConstraints"
                            tools:layout_editor_absoluteX="0dp" />
                    </android.support.constraint.ConstraintLayout>
                </GridLayout>

                <!--2. 그래프-->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="282dp"
                    android:layout_marginTop="30dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="275dp"
                        android:background="#fff"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="1dp">

                    </android.support.v7.widget.CardView>

                </GridLayout>

                <!--2. 생활습관-->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <!--운동-->
                            <android.support.v7.widget.CardView
                                android:id="@+id/card_exercise"
                                android:layout_width="170dp"
                                android:layout_height="130dp"
                                android:layout_marginRight="10dp"
                                android:clickable="true"
                                app:cardBackgroundColor="#fff"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginLeft="15dp"
                                        android:fontFamily="@font/noto_sans"
                                        android:text="운동"
                                        android:textColor="#999"
                                        android:textSize="15sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="12dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:background="@drawable/walking" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/noto_sans"
                                            android:text="2048"
                                            android:textColor="#8CE28C"
                                            android:textSize="30sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="-2dp"
                                            android:fontFamily="@font/noto_sans"
                                            android:text="걸음"
                                            android:textColor="#8CE28C"
                                            android:textSize="12sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <!--물-->
                            <android.support.v7.widget.CardView
                                android:id="@+id/card_water"
                                android:layout_width="165dp"
                                android:layout_height="130dp"
                                android:layout_marginRight="10dp"
                                android:clickable="true"
                                app:cardBackgroundColor="#fff"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginLeft="15dp"
                                        android:fontFamily="@font/noto_sans"
                                        android:text="물"
                                        android:textColor="#999"
                                        android:textSize="15sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="12dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="40dp"
                                        android:layout_marginTop="6dp"
                                        android:background="@drawable/water" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/noto_sans"
                                            android:text="0"
                                            android:textColor="#50D9E3"
                                            android:textSize="35sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="-2dp"
                                            android:fontFamily="@font/noto_sans"
                                            android:text="잔"
                                            android:textColor="#50D9E3"
                                            android:textSize="12sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <!--수면-->
                            <android.support.v7.widget.CardView
                                android:id="@+id/card_sleep"
                                android:layout_width="165dp"
                                android:layout_height="130dp"
                                android:layout_marginRight="10dp"
                                app:cardBackgroundColor="#fff"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginLeft="15dp"
                                        android:fontFamily="@font/noto_sans"
                                        android:text="수면"
                                        android:textColor="#999"
                                        android:textSize="15sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="12dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:background="@drawable/sleep" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/noto_sans"
                                            android:text="5"
                                            android:textColor="#5D4BB5"
                                            android:textSize="30sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="-2dp"
                                            android:fontFamily="@font/noto_sans"
                                            android:text="시간"
                                            android:textColor="#5D4BB5"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/noto_sans"
                                            android:text="35"
                                            android:textColor="#5D4BB5"
                                            android:textSize="30sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="-2dp"
                                            android:fontFamily="@font/noto_sans"
                                            android:text="분"
                                            android:textColor="#5D4BB5"
                                            android:textSize="12sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <!--음식-->
                            <android.support.v7.widget.CardView
                                android:id="@+id/card_food"
                                android:layout_width="165dp"
                                android:layout_height="130dp"
                                android:layout_marginRight="10dp"
                                app:cardBackgroundColor="#fff"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginLeft="15dp"
                                        android:fontFamily="@font/noto_sans"
                                        android:text="음식"
                                        android:textColor="#999"
                                        android:textSize="15sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="12dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:background="@drawable/food" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/noto_sans"
                                            android:text="1309"
                                            android:textColor="#FF9066"
                                            android:textSize="30sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="-2dp"
                                            android:fontFamily="@font/noto_sans"
                                            android:text="kcal"
                                            android:textColor="#FF9066"
                                            android:textSize="12sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <!--음주-->
                            <android.support.v7.widget.CardView
                                android:id="@+id/card_alcohol"
                                android:layout_width="165dp"
                                android:layout_height="130dp"
                                android:layout_marginRight="10dp"
                                app:cardBackgroundColor="#fff"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginLeft="15dp"
                                        android:fontFamily="@font/noto_sans"
                                        android:text="음주"
                                        android:textColor="#999"
                                        android:textSize="15sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="12dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:background="@drawable/drink" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="8dp"
                                            android:fontFamily="@font/noto_sans"
                                            android:text="3"
                                            android:textColor="#FFDC00"
                                            android:textSize="30sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="7dp"
                                            android:fontFamily="@font/noto_sans"
                                            android:text="번"
                                            android:textColor="#FFDC00"
                                            android:textSize="12sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <!--흡연-->
                            <android.support.v7.widget.CardView
                                android:id="@+id/card_smoke"
                                android:layout_width="165dp"
                                android:layout_height="130dp"
                                android:layout_marginRight="10dp"
                                app:cardBackgroundColor="#fff"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginLeft="15dp"
                                        android:fontFamily="@font/noto_sans"
                                        android:text="흡연"
                                        android:textColor="#999"
                                        android:textSize="15sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="12dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:background="@drawable/smoke" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/noto_sans"
                                            android:text="2"
                                            android:textColor="#9396A3"
                                            android:textSize="35sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="-2dp"
                                            android:fontFamily="@font/noto_sans"
                                            android:text="갑"
                                            android:textColor="#9396A3"
                                            android:textSize="12sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </HorizontalScrollView>
                </GridLayout>

                <!--3. 질병안내-->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:backgroundTint="#F23B2E"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingLeft="30dp"
                                    android:paddingTop="28dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/noto_sans"
                                        android:text="발병 위험 높음"
                                        android:textColor="#fff"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/noto_sans"
                                        android:paddingTop="5dp"
                                        android:text="뇌졸중"
                                        android:textColor="#fff"
                                        android:textSize="30sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:fontFamily="@font/noto_sans"
                                    android:paddingTop="8dp"
                                    android:paddingRight="16dp"
                                    android:text="+ more"
                                    android:textColor="#fff"
                                    android:textSize="9sp" />

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/high" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#F7940F"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingLeft="30dp"
                                    android:paddingTop="28dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/noto_sans"
                                        android:text="발병 위험 보통"
                                        android:textColor="#fff"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/noto_sans"
                                        android:paddingTop="5dp"
                                        android:text="천식"
                                        android:textColor="#fff"
                                        android:textSize="30sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:fontFamily="@font/noto_sans"
                                    android:paddingTop="8dp"
                                    android:paddingRight="16dp"
                                    android:text="+ more"
                                    android:textColor="#fff"
                                    android:textSize="9sp" />

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/medium" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="#29C663"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingLeft="30dp"
                                    android:paddingTop="28dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/noto_sans"
                                        android:text="발병 위험 낮음"
                                        android:textColor="#fff"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/noto_sans"
                                        android:paddingTop="5dp"
                                        android:text="감기"
                                        android:textColor="#fff"
